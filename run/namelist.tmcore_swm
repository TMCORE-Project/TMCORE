&time_control
run_days = 20
dt       = 240
/

&io_control
history_interval   = '6 hours'
output_file_prefix = 'mz.40962'
frames_per_file    = '2000 months'
/

&tmcore
conserve_energy        = .true.
time_scheme            = 2
pv_scheme              = 3
apvm_weight            = 0.5
adv_order              = 2
adv_mono               = .true.
interp_pv_order        = 3
flux_4th_order_correct = .false.
mesh_file_path         = './x1.40962.grid.nc'
/

&test_case
! Choose from 'mountain_zonal_flow', 'steady_geostrophic_flow', 'rossby_haurwitz_wave', 'linearized_rossby_wave'
case_name = 'mountain_zonal_flow'
/
